<%= render 'shared/messages' %>

<div class="row justify-content-md-center">
  <div class="col-md-8">
    <h1 class="my-4 text-center">Log In</h1>
    <%= form_with(scope: :session, url: login_path) do |form| %>
    
        <% if @user.nil? || @user.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h2 class="alert-heading">Ups!</h2>
                <p>There was a problem with your login information, try again!</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% end %>

        <div class="article-form shadow">
            <div class="form-group row article-item">
                <%= form.label :email, class: "col-2 col-form-label", style: "font-weight: bold;" %>
                <div class="col-10">
                    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
                </div>
            </div>
            <div class="form-group row article-item">
                <%= form.label :password, class: "col-2 col-form-label", style: "font-weight: bold;" %>
                <div class="col-10">
                    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
                </div>
            </div>
            <div class="text-center mt-5">
                <%= form.submit("Log In", :class => "btn btn-success px-4") %>
            </div>
        </div>
        <div class="text-center mt-5">
            <%= link_to "[ Back to Homepage ]", root_path%>
        </div>
    <% end %>
    <br>
  </div>
</div>